<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA" /> <!-- Background color (0.952 for red, green, and blue) -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Bottom border (underline) -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <size android:height="2dp" /> <!-- Thin underline height -->
            <solid android:color="#D3D3D3" /> <!-- Underline color -->
            <corners android:radius="8dp" /> <!-- Rounded corners to match the background -->
        </shape>
    </item>
</layer-list>
