<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Icon for Duty Type -->

    <!-- Departure and Destination -->

    <ImageView
        android:id="@+id/flightIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/plane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flightRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="SYD - RAR"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/flightTimes"
        app:layout_constraintStart_toEndOf="@id/flightIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flightData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="JQ899"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/flightTimes"
        app:layout_constraintStart_toEndOf="@id/flightIcon"
        app:layout_constraintTop_toBottomOf="@id/flightRoute" />

    <!-- Flight Times -->
    <TextView
        android:id="@+id/flightTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="07:15L - 13:45L"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/flightIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
