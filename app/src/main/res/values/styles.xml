<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom style for BottomNavigationView -->
    <style name="BottomNavigationViewItem" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">34dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextStyle</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>

    </style>

    <!-- Define text style for BottomNavigationView items -->
    <style name="BottomNavTextStyle">
        <item name="android:textSize">14sp</item>

    </style>
</resources>
